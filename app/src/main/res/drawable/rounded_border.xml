<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 배경색 -->
    <solid android:color="#FFFFFF"/> <!-- 흰색 배경 -->

    <!-- 테두리 -->
    <stroke
        android:width="2dp"
        android:color="#FF5722"/> <!-- 테두리 색상 -->

    <!-- 모서리 둥글게 -->
    <corners android:radius="16dp"/> <!-- radius 조절 가능 -->

    <!-- 내부 패딩 -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />

    <!-- 그림자 효과 (API 21 이상에서 elevation과 함께 사용 권장) -->
    <!-- Android 5.0 이상에서 View에 android:elevation 사용 가능 -->
</shape>
