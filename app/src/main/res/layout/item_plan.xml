<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/bt_del"
            android:contentDescription="삭제"
            app:tint="@null" />

        <TextView
            android:id="@+id/txtPlanTitle"  android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toStartOf="@id/btnDelete"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="8dp"
            android:text="여행 제목" /> <TextView
        android:id="@+id/txtPlanPeriod" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPlanTitle"
        android:layout_alignParentStart="true"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:text="2025-06-10 ~ 2025-06-12" /> <TextView
        android:id="@+id/txtPlanGroup" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPlanPeriod"
        android:layout_alignParentStart="true"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/black"
        android:text="우리 그룹" /> </RelativeLayout>

</androidx.cardview.widget.CardView>